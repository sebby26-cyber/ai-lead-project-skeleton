{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "AI Task Board",
  "type": "object",
  "required": ["columns", "tasks"],
  "properties": {
    "columns": {
      "type": "array",
      "items": { "type": "string" }
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "status"],
        "properties": {
          "id": { "type": "string" },
          "title": { "type": "string" },
          "status": { "type": "string" },
          "owner_role": { "type": "string" },
          "requires_approval": {
            "type": "array",
            "items": { "type": "string" }
          },
          "description": { "type": "string" },
          "priority": { "type": "string", "enum": ["low", "medium", "high", "critical"] }
        }
      }
    }
  }
}
