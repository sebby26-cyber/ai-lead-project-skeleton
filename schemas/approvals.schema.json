{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "AI Approval Rules",
  "type": "object",
  "required": ["triggers"],
  "properties": {
    "triggers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["trigger_id", "description", "required_approvals"],
        "properties": {
          "trigger_id": { "type": "string" },
          "description": { "type": "string" },
          "condition": { "type": "string" },
          "required_approvals": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      }
    },
    "approval_log": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "task_id": { "type": "string" },
          "trigger_id": { "type": "string" },
          "approval_type": { "type": "string" },
          "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
          "approved_by": { "type": "string" },
          "timestamp": { "type": "string" }
        }
      }
    }
  }
}
